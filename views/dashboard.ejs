          </li>
        </ul>
        <div class="tab-content" id="pills-tabContent">
          <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab" tabindex="0">
            <form class="row filter-form" method="GET">
              <% const { title, location, industry, position } = filter %>
              <div class="col-lg-10 col-12 panel">
                <div class="row">
                  <div class="col-lg-3 col-md-6">
                    <div class="history-input-design">
                      <input name="title" type="search" value="<%= title?.$regex %>" placeholder="Business Name">
                      <i class="bi bi-search"></i>
                    </div>
                  </div>
                  <div class="col-lg-3 col-md-6">
                    <div class="history-input-design">
                      <input name="location" type="search" value="<%= location?.$regex %>" class="api-field" placeholder="Location history" autocomplete="off">
                      <i class="bi bi-search"></i>
                    </div>
                  </div>
                  <div class="col-lg-3 col-md-6">
                    <div class="history-input-design">
                      <input name="industry" type="search" value="<%= industry?.$regex %>" class="" placeholder="Industry Search">
                      <i class="bi bi-search"></i>
                    </div>
                  </div>
                  <div class="col-lg-3 col-md-6">
                    <div class="history-input-design">
                      <input name="position" type="search" value="<%= position?.$regex %>" class="" placeholder="Position Search">
                      <i class="bi bi-search"></i>
                    </div>
                  </div>
                </div>
              </div>
    
              <div class="col-lg-2 col-md-6 panel">
                <button class="dash-btn" type="submit">Search</button>
              </div>
            </form>
            
            <h5 class="fw-bold mt-5 mb-4">Shortlisted Companies / Businesses</h5>        
            <div class="row">
              <% companies.forEach((item) => { %>
              <div class="col-lg-6">
                <div class="shortlisted-companies">
                  <div class="row">
                    <div class="col-lg-6">
                      <h6 class="company-name"><a href='/business/<%= item._id %>'><%= item.fullName %></a></h6>
                      <div class="company-loc">Location: <%= item.location %></div>
                      <div class="company-loc">Business Operate: <%= item.headQuarterLocation %></div>
                    </div>
                    <div class="col-lg-6">
                      <% 
                      let connectionSent = false
                      let connectionId;
                      let connectionApproved;
                      user.connection?.forEach((connection)=>{
                        if(connection.business.toString() == item._id.toString()){
                          connectionSent = true
                          connectionId = connection._id
                          connectionApproved = connection.approved
                        }
                      })
                      if(connectionSent){ %>
                      <form class="dangerous-form" data-warning="Do you want to Delete the Connection?" action="/api/connection/delete" method="POST">
                        <input type="hidden" name="id" value="<%= connectionId._id %>">
                        <input type="hidden" name="business" value="<%= item._id %>">
                        <input type="hidden" name="user" value="<%= user.id %>">
                        <button class="company_request_btn delete-connection" type="submit"> <%= connectionApproved ? 'Remove Connection' : 'Delete Connection Request' %></button>
                      </form>
                      <% } else { %>
                      <a class="company_request_btn" href="/connection-request?company=<%= item._id %>" data-company="<%= item._id %>"> + Send Connection Request</a>
                      <% } %>
    
                    </div>
                  </div>
                  <div class="company-position">
                    <% if(item.jobs.length > 0) { %>
                    <span class="company-position-offer">Offered Positions:</span>
                    <div class="position-details">
                      <% item.jobs?.forEach((job)=>{ %>
                      <span><%= job.title %></span>
                      <% }) %>
                    </div>
                    <% } %>
    
                  </div>
                  <% if(item.website) { %>
                  <div class="company-link">
                    <i class="fa-solid fa-globe"></i>
                    <span>Website: <a href="<%= item.website %>"><%= item.website %></a></span>
                  </div>
                  <% } %>
                  <!-- <button type="button" class="dash-btn my-3"> Send Details <i class="fa-solid fa-arrow-up-right-from-square mx-2"></i></button> -->
                </div>
              </div>
              <% }) %>
